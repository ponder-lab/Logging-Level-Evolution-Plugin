<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="edu.hunter.log.evalution.commands.category">
      </category>
      <command
            name="Evaluate log projects."
            categoryId="edu.hunter.log.evalution.commands.category"
            id="edu.hunter.log.evalution.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="edu.hunter.log.evalution.commands.sampleCommand"
            class="edu.hunter.log.evalution.handlers.EvaluationHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edu.hunter.log.evalution.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="edu.hunter.log.evalution.menus.sampleMenu">
            <command
                  commandId="edu.hunter.log.evalution.commands.sampleCommand"
                  mnemonic="S"
                  id="edu.hunter.log.evalution.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="edu.hunter.log.evalution.toolbars.sampleToolbar">
            <command
                  commandId="edu.hunter.log.evalution.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world"
                  id="edu.hunter.log.evalution.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.refactoring.menu?after=additions">
         <command
               commandId="edu.hunter.log.evalution.commands.sampleCommand"
               label="Evaluate log projects."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="org.eclipse.jdt.core.IJavaProject">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
